# ==================================================
# CONFIGURATION O2SWITCH - Laravel + Vue.js + Inertia
# ==================================================
# Application: GestMat v2 - Vue Edition
# Stack: Laravel 12 + Vue 3 + Inertia.js
# Hébergeur: O2switch
# ==================================================

# ==================================================
# APPLICATION
# ==================================================
APP_NAME="GestMat v2"
APP_ENV=production
APP_KEY=  # GÉNÉRER: php artisan key:generate
APP_DEBUG=false
APP_URL=https://votre-domaine.com
APP_TIMEZONE=UTC

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

# ==================================================
# INERTIA.JS
# ==================================================
# SSR désactivé pour O2switch (pas de Node.js serveur)
INERTIA_SSR_ENABLED=false

# ==================================================
# LOGGING
# ==================================================
LOG_CHANNEL=daily
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_DAILY_DAYS=7

# ==================================================
# BASE DE DONNÉES - MySQL O2switch
# ==================================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=  # Ex: cpaneluser_gestmatv2_vue
DB_USERNAME=  # Ex: cpaneluser_gestmat
DB_PASSWORD=  # Mot de passe MySQL cPanel

# ==================================================
# CACHE - FICHIER (Pas de Redis)
# ==================================================
CACHE_STORE=file
CACHE_PREFIX=gestmat_vue_

# ==================================================
# SESSION - DATABASE
# ==================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ==================================================
# BROADCAST
# ==================================================
BROADCAST_CONNECTION=log

# ==================================================
# FILESYSTEM
# ==================================================
FILESYSTEM_DISK=local

# ==================================================
# QUEUE - DATABASE + Cron
# ==================================================
QUEUE_CONNECTION=database

# ==================================================
# MAIL - SMTP O2switch
# ==================================================
MAIL_MAILER=smtp
MAIL_HOST=mail.votre-domaine.com
MAIL_PORT=587
MAIL_USERNAME=noreply@votre-domaine.com
MAIL_PASSWORD=  # Mot de passe email cPanel
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@votre-domaine.com
MAIL_FROM_NAME="${APP_NAME}"

# ==================================================
# VITE (Frontend Build)
# ==================================================
VITE_APP_NAME="${APP_NAME}"

# Important: En production, les assets sont pré-compilés
# Pas besoin de serveur Vite en production
VITE_DEV_SERVER_KEY=
VITE_DEV_SERVER_CERT=

# ==================================================
# SANCTUM (si API utilisée)
# ==================================================
SANCTUM_STATEFUL_DOMAINS=votre-domaine.com
SESSION_DOMAIN=.votre-domaine.com

# ==================================================
# TELESCOPE (Désactivé en production)
# ==================================================
TELESCOPE_ENABLED=false

# ==================================================
# NOTES IMPORTANTES O2SWITCH + VUE.JS
# ==================================================
# 1. Build assets EN LOCAL avant déploiement: npm run build
# 2. Upload le dossier public/build/ vers O2switch
# 3. NE PAS installer node_modules sur le serveur
# 4. Inertia SSR désactivé (pas de Node.js serveur sur mutualisé)
# 5. Vite compile tout en assets statiques
#
# COMMANDES BUILD LOCAL:
# npm run build           # Compile pour production
# php artisan optimize    # Optimise Laravel
#
# WORKFLOW DÉPLOIEMENT:
# 1. Local: npm run build
# 2. Local: git commit & push
# 3. O2switch: git pull
# 4. O2switch: composer install --no-dev
# 5. O2switch: php artisan migrate --force
# 6. O2switch: php artisan config:cache
#
# ASSETS:
# - Tous dans public/build/ (généré par Vite)
# - Cache automatique navigateur (1 an)
# - Pas besoin de CDN pour petits projets
#
# SUPPORT O2SWITCH:
# - Email: support@o2switch.fr
# - Téléphone: 04 44 44 60 40
